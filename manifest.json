{
    "manifest_version": 3,
    "name": "Custom Font for Twitter",
    "version": "1.1",
    "description": "Load a custom font from a URL when visiting twitter.com",
    "permissions": ["https://x.com/*"],
    "content_scripts": [
      {
        "matches": ["https://x.com/*"],
        "js": ["content.js"],
        "all_frames": true
      }
    ],
    "icons": {
      "48": "icon.png",
      "128": "icon.png"
    }
  }
